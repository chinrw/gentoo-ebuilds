inherit cargo

KEYWORDS="~amd64"
SRC_URI="https://github.com/wasmerio/wasmer/archive/refs/tags/${PV}.tar.gz -> ${P}.tar.gz $(cargo_crate_uris)"

DESCRIPTION="universal web assembly runtime"
HOMEPAGE="https://wasmer.io"
LICENSE="MIT"
SLOT="0"
IUSE="+cranelift engine-dylib llvm singlepass ${ALL_LLVM_TARGETS[*]}"

BDEPEND="
	>=virtual/rust-1.56.0
	llvm? ( ||
		(
			sys-devel/llvm:13[llvm_targets_X86,llvm_targets_AArch64]
			sys-devel/llvm:12[llvm_targets_X86,llvm_targets_AArch64]
			sys-devel/llvm:11[llvm_targets_X86,llvm_targets_AArch64]
			sys-devel/llvm:10[llvm_targets_X86,llvm_targets_AArch64]
		)
	)
"

cargo_do() {
	if use llvm; then
		export RUSTFLAGS="$(echo "$RUSTFLAGS" $(llvm-config --ldflags) $(llvm-config --libs engine))"
		# For some reason, inkwell doesn't pick up the llvm link flags correctly
	fi
	cmd=$1
	shift
	RUSTFLAGS="$RUSTFLAGS" \
		cargo_$cmd \
		--features "$(usex cranelift cranelift "") $(usex llvm llvm "") $(usex singlepass singlepass "")\
		$(usex engine-dylib dylib "")"\
		"$@"
}

src_compile() {
	cargo_do src_compile --manifest-path lib/cli/Cargo.toml --bin wasmer
}

src_install() {
	cargo_do src_install --path lib/cli/ --bin wasmer
	einstalldocs
}
